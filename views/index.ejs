<div class="pl-5 pr-5">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
                <div class="col-sm-6">

                </div>
            </div>
        </div>
    </div>


    <div class="content">
        <div class="container-fluid">
            <div class="row pb-3">
                <div class="col-lg-4">
                    <div class="card shadow card-outline card-principal text-center">
                        <div class="card-header border-0">
                            <div class="d-flex justify-content-center text-center">
                                <h5 class="font-weight-bold primary-text">Total de pedidos</h5>
                            </div>
                        </div>
                        <div class="card-body">
                            <h1 class="font-weight-bold"><%= pedidosTotal.pedidos %> </h1>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <!-- CARD INGRSOS TOTAL -->
                    <div class="card shadow card-outline card-principal text-center">
                        <div class="card-header border-0">
                            <div class="d-flex justify-content-center">
                                <h5 class="font-weight-bold primary-text">Ingresos totales</h5>
                            </div>
                        </div>
                        <div class="card-body">
                            <h1 class="font-weight-bold"><i class="fas fa-dollar-sign secundary-text fa-sm"></i>
                                <%= ingresos.ingresos %>
                            </h1>

                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <!-- CARD PEDIDOS PENDIENTES -->
                    <div class="card shadow card-outline card-principal text-center">
                        <div class="card-header border-0">
                            <div class="d-flex justify-content-center">
                                <h5 class="font-weight-bold primary-text">Pedidos pendientes</h5>
                            </div>
                        </div>
                        <div class="card-body">
                            <h1 class="font-weight-bold">
                                <%= pedidosPendientes.pedidosPendientes %>
                            </h1>

                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-lg-9">
                    <!-- CARD PEDIDOS RECIENTES -->
                    <div class="card shadow">
                        <div class="card-header pb-0 border-0">
                            <h3 class="card-title primary-text">Pedidos recientes</h3>
                        </div>
                        <div class="card-body p-0">
                            <table id="pedido" class="table text-center">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Cliente</th>
                                        <th scope="col">Direccion</th>
                                        <th scope="col">Precio Total</th>
                                        <th scope="col">Fecha</th>
                                        <th scope="col">Estado de pago</th>
                                        <th scope="col">Estado de envio</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for( let i=0; i < pedidosRecientes.length; i++ ) { %>
                                        <tr>
                                            <th scope="row">
                                                <%= pedidosRecientes[i].id %>
                                            </th>
                                            <td>
                                                <%= pedidosRecientes[i].cliente %>
                                            </td>
                                            <td>
                                                <%= pedidosRecientes[i].direccion %>
                                            </td>
                                            <td>
                                                <i class="fas fa-dollar-sign secundary-text fa-sm"></i><%= pedidosRecientes[i].precio %>
                                            </td>
                                            <td>
                                                <%= pedidosRecientes[i].fecha %>
                                            </td>
                                            <td>
                                                <% if (pedidosRecientes[i].idEstadoPago==1) { %>
                                                    <span class="badge bg-danger">Pendiente</span>
                                                    <% } else if(pedidosRecientes[i].idEstadoPago==2){ %>
                                                        <span class="badge bg-success">Pagado</span>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <% if (pedidosRecientes[i].idEstadoEnvio==1) { %>
                                                    <span class="badge bg-danger">Pendiente</span>
                                                    <% }else if(pedidosRecientes[i].idEstadoEnvio==2) { %>
                                                        <span class="badge bg-warning">Preparado</span>
                                                        <% }else if(pedidosRecientes[i].idEstadoEnvio==3) { %>
                                                            <span class="badge bg-primary">Enviado</span>
                                                            <% }else if(pedidosRecientes[i].idEstadoEnvio==4) { %>
                                                                <span class="badge bg-success">Completado</span>
                                                                <% } %>
                                            </td>
                                            <td class="p-2">
                                                <div class="dropdown drop-down">
                                                    <div class="btn-group">
                                                        <a type="button" class="primary-text pt-2 pb-1 pl-2 pr-2"
                                                            data-toggle="dropdown">
                                                            <i class="fas fa-ellipsis-v"></i>
                                                        </a>
                                                        <div class="dropdown-menu drop-down-menu" id="menuTable">
                                                            <form class="form-inline" method="get"
                                                                action="/pedidos/detalle/<%= pedidosRecientes[i].id %>">
                                                                <button class="dropdown-item" type="submit">
                                                                    <i
                                                                        class="fas fa-solid fa-poll-h text-secondary"></i>
                                                                    Detalles
                                                                </button>
                                                            </form>
                                                            <form class="form-inline" method="get"
                                                                action="/pedidos/editarProductos/<%= pedidosRecientes[i].id %>">
                                                                <button class="dropdown-item" type="submit">
                                                                    <i class="fas fa-solid fa-edit text-info"></i>

                                                                    Editar
                                                                </button>
                                                            </form>
                                                            <form class="form-inline formulario-eliminar" method="post"
                                                                action="/pedidos/eliminar/<%= pedidosRecientes[i].id %>">
                                                                <button class="dropdown-item" type="submit">
                                                                    <i
                                                                        class="fas fa-solid fa-trash-alt text-danger"></i>

                                                                    Eliminar
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>

                            </table>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col-md-6 -->
                <div class="col-lg-3">
                    <!--  CARD PRODUCTO MAS PEDIDO -->
                    <div class="card shadow">
                        <div class="card-header border-0">
                            <h3 class="card-title primary-text">Producto mas pedido</h3>
                        </div>
                        <div class="card-body table-responsive text-center p-0">
                            <img src="/images/<%= productoVendido.imagen %>" alt="Product" class="rounded mr-2"
                                width="200" height="150" required>
                            <h4>
                                <%= productoVendido.nombre %>
                            </h4>
                        </div>
                    </div>
                    <!--  CARD PRODUCTOS PEDIDOS RECIENTEMENTE -->
                    <div class="card shadow">
                        <div class="card-header border-0">
                            <h3 class="card-title primary-text">Productos pedidos recientemente</h3>
                        </div>
                        <div class="card-body table-responsive p-0">
                            <table class="table table-striped table-valign-middle">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Imagen</th>
                                        <th>Producto</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for( let i=0; i < productosRecientes.length; i++ ) { %>
                                        <tr>
                                            <td>
                                                <%= productosRecientes[i].idProducto %>
                                            </td>
                                            <td>
                                                <img src="/images/<%= productosRecientes[i].imagen %>" alt="Product"
                                                    class="img-circle img-size-32 mr-2">
                                            </td>
                                            <td>
                                                <%= productosRecientes[i].nombre %>
                                            </td>
                                        </tr>
                                        <% } %>


                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col-md-6 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
</div>

<!-- /.content -->
<%- contentFor('footer') %>
    <script>
        $(document).ready(function () {
            $('#pedido').DataTable({
                "scrollY": "550px",
                "scrollCollapse": false,
                "language": {
                    "emptyTable": "No hay datos disponibles",
                    "search": "Buscar:",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    },
                    "zeroRecords": "No se encontró un cliente parecido",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ pedidos",
                    "infoEmpty": "Mostrando 0 a 0 de 0 pedidos",
                    "infoFiltered": "(Pedidos filtrados de _MAX_ )",
                    "lengthMenu": "Mostrar _MENU_ pedidos"
                }
            });
        });

        //SweetAlert2 - Confirmar Eliminacion de producto
        $('.formulario-eliminar').submit(function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Estas seguro de eliminar este pedido?',
                text: "Esta accion no se podrá revertir!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#9466C5',
                cancelButtonColor: '#CC2929',
                confirmButtonText: 'Si, Eliminarlo!',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Eliminado!',
                        'El producto ha sido eliminado.',
                        'success'
                    )
                    this.submit();
                }
            })
        });
    </script>
    <%- contentFor('header') %>