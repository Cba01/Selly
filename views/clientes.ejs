<h1>Clientes</h1>
<div class="container shadow p-3 mb-5 bg-white rounded">
    <table id="clients" class="table text-center ">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Cliente</th>
                <th scope="col">Telefono</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            <% for( let i=0; i < clientes.length; i++ ) { %>
                <tr>
                    <th scope="row">
                        <%= clientes[i].id %>
                    </th>
                    <td>
                        <%= clientes[i].nombre %>
                    </td>
                    <td>
                        <%= clientes[i].telefono %>
                    </td>
                    <td class="p-2">
                        <div class="dropdown">
                            <div class="btn-group">
                                <a type="button" class="primary-text pt-2 pb-1 pl-2 pr-2" data-toggle="dropdown">
                                    <i class="fas fa-ellipsis-v"></i>
                                </a>
                                <div class="dropdown-menu" id="menuTable">
                                    <form class="form-inline formulario-eliminar" method="get"
                                        action="/clientes/detalle/<%= clientes[i].id %>">
                                        <button class="dropdown-item" type="submit">
                                            <i class="fas fa-solid fa-poll-h text-secondary"></i>

                                            Detalles
                                        </button>
                                    </form>
                                    <form class="form-inline formulario-eliminar" method="get"
                                        action="/clientes/editar/<%= clientes[i].id %>">
                                        <button class="dropdown-item" type="submit">
                                            <i class="fas fa-solid fa-edit text-info"></i>

                                            Editar
                                        </button>
                                    </form>
                                    <form class="form-inline formulario-eliminar" method="post"
                                        action="/clientes/eliminar/<%= clientes[i].id %>">
                                        <button class="dropdown-item" type="submit">
                                            <i class="fas fa-solid fa-trash-alt text-danger"></i>

                                            Eliminar
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                <% } %>
        </tbody>

    </table>
</div>

<%- contentFor('footer') %>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#clients').DataTable({
                "scrollY": "550px",
                "scrollCollapse": false,
                "language": {
                    "emptyTable": "No hay datos disponibles",
                    "search": "Buscar:",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    },
                    "zeroRecords": "No se encontró un cliente parecido",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ clientes",
                    "infoEmpty": "Mostrando 0 a 0 de 0 clientes",
                    "infoFiltered": "(Clientes filtrados de _MAX_ )",
                    "lengthMenu":     "Mostrar _MENU_ clientes"
                }
            });
        });
        //SweetAlert2 - Confirmar Eliminacion de producto
        $('.formulario-eliminar').submit(function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Estas seguro de eliminar este cliente?',
                text: "Se eliminará todos los pedidos relacionados con este cliente!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#9466C5',
                cancelButtonColor: '#CC2929',
                confirmButtonText: 'Si, Eliminarlo!',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Eliminado!',
                        'El cliente ha sido eliminado.',
                        'success'
                    )
                    this.submit();
                }
            })
        });
    </script>

    <%- contentFor('header') %>
        <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css">