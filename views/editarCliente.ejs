<h1>Editar cliente</h1>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card text-center" >

                <div class="card-header">
                    <h3 class="card-title primary-text">Cliente original</h1>
                </div>
                <div class="card-body">
                    <h2><%= datos.nombre %></h1>
                    <h3 class="card-subtitle text-muted"><%= datos.telefono%></h3>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title primary-text">Cliente Nuevo</h1>
                </div>
                <div class="card-body">
                    <form action="../actualizar" method="post">
                        <input type="text" class="form-control" id="idCliente" name="idCliente" value="<%= datos.id %>" hidden>
                        <div class="mb-3">
                            <label for="newClientName" class="form-label">Nombre del cliente</label>
                            <input type="text" class="form-control" id="newClientName" name="clientName" value="<%= datos.nombre %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="newClientPhone" class="form-label">Telefono</label>
                            <input type="number" max="999999999" min="100000000" class="form-control"
                                id="newClientPhone" name="clientPhone" value="<%= telefono %>">
                        </div>
                        <button type="submit" class="btn btn-principal">Guardar cambios</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- contentFor('footer') %>

    <%- contentFor('header') %>